{
  "desc": "Auto generated by fswatch [dragon]",
  "triggers": [
    {
      "name": "",
      "pattens": [
        "**/*.go"
      ],
      "env": {
        "DEBUG": "1"
      },
      "cmd": "cd src && go build -o ../release/dragon && ../release/dragon",
      "_comment": "windows cmd: cd src && go build -o ../release/dragon.exe && cd ../release && dragon.exe",
      "shell": true,
      "delay": "100ms",
      "stop_timeout": "500ms",
      "signal": "KILL",
      "kill_signal": ""
    }
  ],
  "watch_paths": [
    "."
  ],
  "watch_depth": 10
}